<main class="pt-3">
  <div class="container mb-5 ">
    <div class="row">
      <div class="col-10 col-md-9 col-lg-6 col-lg-5 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
              <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
        <% end %>

        <%= form_with model: @user, metod: :patch do |f| %>

          <div>
            <label class="form-label">Name</label><br>
            <%= f.text_field :name, class:"form-control" %><br>
          </div>

          <div class="mb-3">
            <label class="form-label">Image</label><br>
            <%= f.file_field :profile_image, accept:"image/*", class:"form-control-file" %>
          </div>

          <div>
            <label class="form-label">Introduction</label><br>
            <%= f.text_area :introduction, class:"form-control" %><br>
          </div>

          <div class="mb-3">
            <%= f.submit "Update User", class:"btn btn-secondary" %><br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
