<main class="pt-3">
  <div class="container-sm mb-5 ">
    <div class="row justify-content-center">
      <div class="col-sm-10 col-lg-6 px-5">
        <h2>User info</h2>
        <%= form_with model: @user, metod: :patch do |f| %>

          <div>
            <label class="form-label">Name</label><br>
            <%= f.text_field :name, class:"form-control" %><br>
          </div>

          <div class="mb-3">
            <label class="form-label">Image</label><br>
            <%= f.file_field :profile_image, accept:"image/*" %>
          </div>

          <div>
            <label class="form-label">Introduction</label><br>
            <%= f.text_area :introduction, class:"form-control" %><br>
          </div>

          <div class="mb-3">
            <%= f.submit "Update User", class:"btn btn-secondary" %><br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
