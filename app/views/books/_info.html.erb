<div class="col-md-3 px-md-2 ">
  <h2>User info</h2>

  <%= image_tag booker.get_profile_image(100, 100) %>

  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <td><strong>name</strong></td>
        <td><strong><%= booker.name %></strong></td>
      </tr>
      <tr>
        <td><strong>introduction</strong></td>
        <td><strong><%= booker.introduction %></strong></td>
      </tr>
    </tbody>
  </table>

  <div class="row mt-5">
    <%= link_to edit_user_path(booker.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>

  <%= form_with model: book do |f| %>

    <label class="form-label">Title</label><br>
    <%= f.text_field :title, class:"form-control pb-0" %><br>

    <label class="form-label">Opinion</label><br>
    <%= f.text_area :body, class:"form-control pb-0" %><br>

    <%= f.submit "Create Book", class:"btn btn-success" %>
  <% end %>
</div>