<main>
  <div class="container px-5 px-md-2">
    <div class="row">
      <%= render 'info', booker: @booker, book: @book %>
      <div class="col-md-8 mt-3 offset-1 px-2">
        <h2>Books</h2>

        <table class="table table-hover mb-5">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag @booker.get_profile_image(80, 80) %></td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <p><%= book.title %></p>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>