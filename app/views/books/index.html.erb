<main class="pt-3">
  <div class="container px-5 px-md-2">
    <div class="row">
      <div class="col-11">
        <% if @book_new.errors.any? %>
          <h3><%= @book_new.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book_new.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= render 'info', booker: @booker, book: @book_new %>
      <div class="col-md-8 offset-md-1 px-2">
        <h2>Books</h2>

        <table class="table table-hover mb-5">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= image_tag book.user.get_profile_image(80, 80) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <p><%= book.title %></p>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>