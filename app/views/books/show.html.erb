<main>
  <div class="container px-5 px-md-2">
    <div class="row">
      <%= render 'info', booker: @booker, book: @book %>
      <div class="col-md-8 mt-3 offset-1 px-2">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@booker.id) do %>
                  <%= image_tag @booker.get_profile_image(100, 100) %><br>
                  <%= @booker.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book_id.id) do %>
                  <%= @book_id.title %>
                <% end %>
              </td>
              <td><%= @book_id.body %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>